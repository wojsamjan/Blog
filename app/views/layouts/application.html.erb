<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %> <!-- : 'reload' -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> <!-- : 'reload' -->
  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Blog</a>
        </div>
        <ul class="nav navbar-nav">
          <li <% if params[:controller] == "home" && params[:action] == "index" %> class="active" <% end %>>
            <a href="<%= root_path %>">Strona główna</a>
          </li>
          <li <% if params[:controller] == "home" && params[:action] == "about" %> class="active" <% end %>>
            <a href="<%= about_path %>">O blogu</a>
          </li>
          <li <% if params[:controller] == "home" && params[:action] == "contact" %> class="active" <% end %>>
            <a href="<%= contact_path %>">Skontaktuj się</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">

      <%= yield %>

    </div>

  </body>
</html>
